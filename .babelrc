{
    "presets": ["@babel/preset-env", "@babel/preset-react", "@babel/preset-typescript"],
    "env": {
        "production": {
            "plugins": [
                ["emotion", { "hoist": true }],
                ["@babel/plugin-proposal-class-properties"],
                ["import", { "libraryName": "antd", "libraryDirectory": "lib", "style": "css" }]
            ]
        },
        "development": {
            "plugins": [
                ["emotion", { "sourceMap": true, "autoLabel": true }],
                ["@babel/plugin-proposal-class-properties"],
                ["import", { "libraryName": "antd", "libraryDirectory": "lib", "style": "css" }]
            ]
        }
    }
}
